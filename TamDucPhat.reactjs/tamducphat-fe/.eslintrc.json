{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended",
        "plugin:react/jsx-runtime"
    ],
    "overrides": [
        {
            "env": {
                "node": true
            },
            "files": [
                ".eslintrc.{js,cjs}",
                "*.js", "*.jsx"
            ],
            "parserOptions": {
                "sourceType": "module"
            }
        }
    ],
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "requireConfigFile": false,
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "jsx-a11y", "prettier", "react"
    ],
    "rules": {
        "no-var": "error",
        "no-unused-vars": 2,
        "prefer-template": "error",
        "radix": "off",
        "import/prefer-default-export": "off",
        "jsx-a11y/no-autofocus": "off",
        "prettier/prettier": 2,
        "no-console": "off",
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error"
    }
}
